.messages-page
  .side-bar-container
    .information
      .styled-flex-wrapper.between
        .name
          = current_user.name
        .action-menu
          %span.create-message
            = link_to do
              = fa_icon 'pencil-square-o', class: 'icon'
          %span.set-config
            = link_to edit_user_path(current_user) do
              = fa_icon 'cog', class: 'icon'

    %hr
    .group-list
      - for i in 1..3
        .group
          .title First chat
          .last-message Hello, chat.â€¦
  .content-container
    .group-information
      .info
        .title First chat
        .members
          - for i in 1..3
            %span.member user#{i}
      .action
        %button edit
    %hr
    .records
      - flash.each do |key, value|
        = content_tag :div, value, class: key+' status-bar'
      - for i in 1..8
        .record
          %span.name ksyunnnn
          %span.date 2018/03/21 18:46:00
          .text this is a message.
    .message-tools.styled-flex-wrapper.between
      %input
      %button Send
